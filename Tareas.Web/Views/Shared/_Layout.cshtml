@{
    bool debug = false;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    @Html.Css("reset.css")
    @Html.Css("text.css")
    @Html.Css("themes/base/jquery.ui.all.css")
    @Html.Css("style.css?f")

@if (debug)
{
    @Html.Script("jquery-1.7.1.js")
    @Html.Script("jquery-ui-1.8.16.js")
}
else
{
    @Html.Script("jquery-1.7.1.min.js")
    @Html.Script("jquery-ui-1.8.16.min.js")
}
    @Html.Script("Custom/scripts.js?f")
    @Html.Script("date.js")
    @Html.Script("date.format.js")

    @* Habilita el intellisense para el css y javascript, pero no se genera en el html final *@
    @if (false)
    { 
        <script src='/Scripts/jquery-1.7.1.min.js' type='text/javascript'></script> 
        <script src='/Scripts/jquery-ui-1.8.11.min.js' type='text/javascript'></script> 
    }
    
    @RenderSection("Head", false)
</head>
<body>
    <div class="header">
        <div class="menu">
            <div class="menu-cuenta">
                @if (Request.IsAuthenticated) {
                    @Html.ActionLink("Salir", "Salir", "Cuenta")
                }                
            </div>
            @if (Request.IsAuthenticated) {
                @Html.Action("MenuPrincipal", "MenuPrincipal")
            }
        </div>
    </div>

    @RenderBody()
</body>
</html>
