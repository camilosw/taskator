= simple_form_for @proyecto, html: { class: 'form-horizontal' } do |f|
  = f.error_notification
  .fieldset
    = f.association :cliente, collection: Cliente.order(:nombre), label_method: :nombre, value_method: :id, include_blank: false, prompt: '-- Seleccionar --'
    = f.input :nombre
    .form-actions
      = f.submit 'Guardar', class: 'btn btn-primary'
      = link_to 'Cancelar', proyectos_path, class: 'btn'
