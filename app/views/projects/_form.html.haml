= simple_form_for @project, html: { class: 'form-horizontal' } do |f|
  = f.error_notification

  .form-inputs
    = f.association :client, collection: Client.order(:name), label_method: :name, value_method: :id, include_blank: false, prompt: '-- Select --'
    = f.input :name
    = f.input :description
    = f.input :order
    = f.input :closed

  .form-actions
    = f.submit 'Save', class: 'btn btn-primary'
    = link_to 'Cancel', projects_path, class: 'btn'