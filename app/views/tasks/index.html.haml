%h1 Tasks

%table.table.table-striped.table-hover
  %thead
    %tr
      %th Project
      %th Assigned
      %th Creator
      %th Description
      %th Due date
      %th Actions

  %tbody
    - @tasks.each do |task|
      %tr
        %td= link_to task.project.name, task.project
        %td= link_to task.assigned.email, task.assigned
        %td= link_to task.creator.email, task.creator
        %td= link_to task.description, task
        %td= task.due_date
        %td
          = link_to 'Edit', edit_task_path(task), class: 'btn btn-mini'
          = link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger'

= will_paginate @tasks, previous_label: h("<"), next_label: h(">"), class: "pagination pagination-centered"

%br

= link_to 'New Task', new_task_path, class: 'btn btn-primary'
