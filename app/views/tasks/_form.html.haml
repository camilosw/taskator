= simple_form_for @task, html: { class: 'form-horizontal' } do |f|
  = f.error_notification

  .form-inputs
    = f.association :project, collection: Project.order(:name), label_method: :name, include_blank: false, prompt: '-- Select --'
    = f.association :assigned, collection: User.order(:email), label_method: :email, include_blank: false, prompt: '-- Select --'
    = f.association :creator, collection: User.order(:email), label_method: :email, include_blank: false, prompt: '-- Select --'
    = f.input :description
    = f.input :due_date
    = f.input :order
    = f.input :closed

  .form-actions
    = f.submit 'Save', class: 'btn btn-primary'
    = link_to 'Cancel', tasks_path, class: 'btn'